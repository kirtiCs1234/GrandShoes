              obj.FromPrice=$("#FromPrice").val(),
            obj.ToPrice=$("#ToPrice").val(),
            obj.FromDate=$("#FromDate").val(),
            obj.ToDate=$("#ToDate").val(),
            obj.DiscountValue=$("#DiscountValue").val(),
            obj.DiscountType=$("#DiscountType").val(),
                obj.IsActive = true
                        if ($('form').valid()) {
                            $.ajax({
                                type: "POST", //HTTP POST Method
