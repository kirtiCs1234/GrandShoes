                            });
                    }
        }

        function loadData(id) {
            debugger;
            $.ajax({
                url: '/Admin/Discount/Detail/'+id,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: 'html',
                success: function (result) {
                    $('.dvCartonDetails').html(result);
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }

        $('#select-all').click(function (event) {
            debugger
            $('.branches:checkbox').each(function () {
                this.checked = true;
            });

        });
        function selectAll(){
            debugger
            $('.products:checkbox').each(function () {
                this.checked = true;
            });
        }
        $('#select-none').click(function (event) {
            debugger
            $('.branches:checkbox').each(function () {
                this.checked = false;
            });
            });
            $('#allSelect').click(function (event) {
                debugger
                $('.branches:checkbox').each(function () {
                    this.checked = true;
                });
            });
           function NoneSelect(){
                debugger
                $('.products:checkbox').each(function () {
                    this.checked = false;
                });
            }
            function History() {
                debugger;
                $.ajax({
                    url: '/Admin/Discount/History',
                    type: "GET",
                    contentType: "application/json;charset=utf-8",
                    dataType: 'html',
                    success: function (result) {
                        $('.dvCartonDetails').html(result);
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
