
@model List<Model.DiscountSummaryModel>
<div class="row marg-btn-20">
    <div class="col-sm-12 col-md-12 col-xs-12">
        <div class="prtm-full-block">
            <div class="row marg-btn-20">
                <div class="prtm-block-content mrgn-b-md">
                    <div class="table-responsive">
                        <div class="table-responsive" style="height:270px;">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>From ProductSKU</th>
                                        <th>To ProductSKU</th>
                                        <th>From StyleSKU</th>
                                        <th>To StyleSKU</th>
                                        <th>From Price</th>
                                        <th>To Price</th>
                                        <th>From Date</th>
                                        <th>To Date</th>
                                        <th>DiscountType</th>
                                        <th>Discount Price</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody class="tbodyIndex" id="table1">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Id)
                                                @Html.DisplayFor(modelItem => item.FromProductSKU)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ToProductSKU)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FromStyleSKU)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ToStyleSKU)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FromPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ToPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FromDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ToDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DiscountType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DiscountValue)
                                            </td>
                                            <td>
                                                <i class="fa fa-trash delete delete-form" data-toggle="modal" data-target="#myModal" data-backdrop="static" onclick="deleteColor(@item.Id)"></i>
                                                &nbsp;
                                            </td>
                                        </tr>
                                        @*<tr>
                                                <td colspan="9">
                                                    <div class="table-responsive accordian-bundling" style="display:none;" id="@item.Id">
                                                        <table class="table table-hover bundle-ppoup-table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Product SKU</th>
                                                                    <th>Style SKU</th>
                                                                    <th>Product Price</th>
                                                                    <th>MarkDown Price</th>
                                                                    <th>Branches</th>
                                                                    <th>Action</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="ReceiptDetail-@item.Id"></tbody>
                                                        </table>
                                                    </div>
                                                </td>
                                            </tr>*@
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
