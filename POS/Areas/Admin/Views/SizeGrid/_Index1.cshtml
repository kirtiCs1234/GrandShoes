@model Dictionary<string, Dictionary<string,string>>
	@{ 
		
	}
<div class="prtm-full-block pos-relative">
    <div class="prtm-block-title pad-all-md">
        <div class="pos-relative">
            <div class="caption">
                <h3 class="text-capitalize">Size Grid</h3>
            </div>
        </div>
    </div>
    <div class="prtm-block-content mrgn-b-md">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Grid No</th>
                        <th>Z01</th>
                        <th>Z02</th>
                        <th>Z03</th>
                        <th>Z04</th>
                        <th>Z05</th>
                        <th>Z06</th>
                        <th>Z07</th>
                        <th>Z08</th>
                        <th>Z09</th>
                        <th>Z10</th>
                        <th>Z11</th>
                        <th>Z12</th>
                        <th>Z13</th>
                        <th>Z14</th>
                        <th>Z15</th>
                        <th>Z16</th>
                        <th>Z17</th>
                        <th>Z18</th>
                        <th>Z19</th>
                        <th>Z20</th>
                        <th>Z21</th>
                        <th>Z22</th>
                        <th>Z23</th>
                        <th>Z24</th>
                        <th>Z25</th>
                        <th>Z26</th>
                        <th>Z27</th>
                        <th>Z28</th>
                        <th>Z29</th>
                        <th>Z30</th>
                        <th style="min-width:125px;">Action</th>

                    </tr>
                </thead>
                <tbody class="tbodyIndex">
                    @if (Model.Count!=0){
						foreach (var item in Model)
						{
							var Id = Convert.ToInt32(item.Key.Split('#')[0]);
							var GridNumber = item.Key.Split('#')[1];

                        <tr>
                            <td>
								@GridNumber
                            </td>
							@foreach (var sitem in item.Value)
							{
								<td>
									@sitem.Value
			  				</td>
							}
                            <td style="min-width:85px;">

                                <i class="fa fa-pencil edit-form edit" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="edit(@Id)"></i>
                                &nbsp;
                                <i class="fa fa-trash delete delete-form" data-toggle="modal" data-target="#myModal" data-backdrop="static" onclick="del(@Id)"></i>
                                &nbsp;
                                <i class="fa fa-eye view-form details" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="details(@Id)"></i>

                            </td>
                        </tr>
                        }
                    }
                    
                    else
                    {
                    <tr>
                        <td colspan="7">
                            <p>No results found.</p>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-12">
    @if (ViewBag.endPage > 1)
    {
        <div class="pagination">

            @if (ViewBag.CurrentPage > 1)
            {
                <li>
                    <a href="/Admin/SizeGrid/_Index1?page=1">First</a>
                </li>
                <li>
                    <a href="/Admin/SizeGrid/_Index1?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }
            @foreach (var i in ViewBag.result)
            {

                var page = i;

                <li class="@(page == ViewBag.CurrentPage ? "active" : "")">
                    <a href="/Admin/SizeGrid/_Index1?page=@page">@page</a>
                </li>

            }
            @if (ViewBag.CurrentPage < ViewBag.totalPages)
            {
                <li>
                    <a href="/Admin/SizeGrid/_Index1?page=@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
                <li>
                    <a href="/Admin/SizeGrid/_Index1?page=@(ViewBag.totalPages)">Last</a>
                </li>
            }

        </div>
    }
</div>