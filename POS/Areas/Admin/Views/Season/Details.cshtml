@model Model.SeasonModel
@{
    ViewBag.Title = "Details";
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">View Season</h4>
        </div>
        @using (Html.BeginForm("Details", "Season", FormMethod.Post, new { id = "viewForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="modal-body">

                <div class="row  mrgn-b-lg">
                    <div class="col-md-6 col-xs-12 col-sm-6">
                        <label>Season Code</label>
                        @*<input class="form-control" type="text" placeholder="First Name" name="FirstName" />*@
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Season Code" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-6">
                        <label>Description</label>
                        @*<input class="form-control" type="text" placeholder="Last Name" name="LastName" />*@
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                     

                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input data-val="true"
                       data-val-number="The field StudentId must be a number."
                       data-val-required="The StudentId field is required."
                       id="IsActive"
                       name="IsActive"
                       type="hidden"
                       value="true" />

            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-outline-inverse">Close</button>
            </div>

        }

    </div>
</div>
<script>

    $("#viewForm").find("input").attr("disabled", true);
    $("#viewForm").find("select").attr("disabled", true);
    $("#viewForm").find(".popup-savebtn").hide();

</script>