@model Model.ProductCategoryModel
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edit Product Category</h4>
        </div>
        @using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post, new { id = "createForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="modal-body">
				<div class="row  mrgn-b-lg">
					<div class="col-md-6 col-xs-12 col-sm-6">
						<label>Product Category Code</label>
						@*<input class="form-control" type="text" placeholder="First Name" name="FirstName" />*@
						@Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Product Category Code" } })
						@Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })

					</div>
					<div class="col-md-6 col-xs-12 col-sm-6">
						<label>Product Category1</label>
						@*<input class="form-control" type="text" placeholder="Last Name" name="LastName" />*@
						@Html.EditorFor(model => model.Category1, new { htmlAttributes = new { @class = "form-control", placeholder = "Product Category1" } })
						@Html.ValidationMessageFor(model => model.Category1, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="row  mrgn-b-lg">
					<div class="col-md-6 col-xs-12 col-sm-6">
						<label>Product Category2</label>
						@*<input class="form-control" type="text" placeholder="First Name" name="FirstName" />*@
						@Html.EditorFor(model => model.Category2, new { htmlAttributes = new { @class = "form-control", placeholder = "Product Category2" } })
						@Html.ValidationMessageFor(model => model.Category2, "", new { @class = "text-danger" })

					</div>
					<div class="col-md-6 col-xs-12 col-sm-6">
						<label>Product Category3</label>
						@*<input class="form-control" type="text" placeholder="Last Name" name="LastName" />*@
						@Html.EditorFor(model => model.Category3, new { htmlAttributes = new { @class = "form-control", placeholder = "Product Category3" } })
						@Html.ValidationMessageFor(model => model.Category3, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="row  mrgn-b-lg">
					<div class="col-md-6 col-xs-12 col-sm-6">
						<label>Product Category4</label>
						@*<input class="form-control" type="text" placeholder="First Name" name="FirstName" />*@
						@Html.EditorFor(model => model.Category4, new { htmlAttributes = new { @class = "form-control", placeholder = "Product Category4" } })
						@Html.ValidationMessageFor(model => model.Category4, "", new { @class = "text-danger" })

					</div>
				</div>
                <input data-val="true"
                       data-val-number="The field StudentId must be a number."
                       data-val-required="The StudentId field is required."
                       id="IsActive"
                       name="IsActive"
                       type="hidden"
                       value="true" />
            </div>

            <div class="modal-footer">
                <button type="button" data-backdrop="static" data-toggle="modal" data-target="#myCancelModal" id="btncancel" class="btn btn-outline-inverse cancel">Cancel</button>
                <input type="submit" value="Update" class="btn btn-success popup-savebtn" />
            </div>
        }

    </div>
</div>
<script>
    $.validator.unobtrusive.parse($("#createForm"))
</script>



