@model List<Model.ReceiptOrderItemModel>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">View Supplier Invoice</h4>
        </div>
        <div class="modal-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Invoice No</th>
                            <th>Product SKU</th>
                            <th>Style SKU</th>
                            <td>Order No</td>
                            <th>Receipt No</th>
                            <th>Date Received</th>
                            <th>Order Qty</th>
                            <th>Receipt Qty</th>
                            <th>IsPosted</th>
                        </tr>
                    </thead>
                    <tbody class="tbodyIndex">
                        @if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                var status = "";
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ReceiveOrder.SupplierInvoice)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Product.ProductSKU)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Product.StyleSKU)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ReceiveOrder.PurchaseOrder.OrderNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ReceiveOrder.ReceiptNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ReceiveOrder.ReceiptDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ReceiveOrder.PurchaseOrder.Quantity)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ReceiveOrder.TotalQuantity)</td>
                                    <td>
                                        @{
                                            if (item.ReceiveOrder.IsFinalize == true)
                                            {
                                                status = "YES";
                                            }
                                            else
                                            {
                                                status = "NO";
                                            }
                                        }<span>@status</span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>No data found.</td>
                            </tr>
                        }
                    </tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
