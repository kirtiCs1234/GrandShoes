@model List<Model.StaffModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="prtm-page-bar col-md-5 col-lg-3 col-sm-12 col-12" style="background:none;">
        <ul class="breadcrumb" style="background:none;">
            <li class="breadcrumb-item text-capitalize">
                <h3>Staff</h3>
            </li>
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        </ul>
    </div>
    @*@using (Html.BeginForm("Index", "User") new { @class = "formuser" })*@
    @*@using (Html.BeginForm("Index", "User", FormMethod.Post, new { @class = "formuser" }))
        {*@
    <!--------advanced search-->
   
    <!------------------>
    @*}*@
   
    <div class="col-md-8 col-lg-6 col-sm-8 col-12 search-container">
        <div class="top-search-navbar-search smallsearch col-md-12 col-lg-12 col-sm-12 col-12">
            <div class="row">

                <input class="top-search-navbar-input col-md-8 col-lg-10 col-sm-8 col-xs-8 searchiFirstName" type="text" placeholder="Search User Name" name="FirstName" id="FirstName">

                @*<input type="submit" value="Add" class="btn btn-success popup-savebtn" />*@

                <button class="advance-search col-md-2 col-lg-1 col-sm-2 col-xs-2" type="button">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                </button>

                <button class="top-search-navbar-button col-md-2 col-lg-1 col-sm-2 col-xs-2" onclick="searchData()">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
        </div>


        <div class="advance-search-container col-md-12 col-lg-12 col-sm-12 col-12">
            <div class="advance-content">
                <div class="col-md-12 col-lg-12 col-xg-12"><h5 style="margin-bottom:20px;color:#000;font-weight:normal">Advanced Keyword Search</h5></div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>First Name</label>
                    <input class="form-control searchFirstName" type="text" placeholder="First Name" id="iFirstName" name="FirstName" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Last Name</label>
                    <input class="form-control searchLastName" type="text" placeholder="Last Name" id="LastName" name="LastName" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Email</label>
                    <input class="form-control searchEmail" type="email" id="Email" placeholder="Email" name="Email" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Phone</label>
                    <input class="form-control searchPhone" type="tel" placeholder="Phone" id="Phone" name="Phone" />
                </div>

                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Status</label>
                    <select class="selectize-single-select searchIsActive" name="IsActive" id="IsAcitive">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>

                <div class="col-md-12 col-lg-12 col-xg-12">
                    <button type="button" onclick="searchData(false)" class="btn btn-success advance-search-btn">Search</button>
                </div>
            </div>
        </div>
    </div>

<div class="table-style">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage" style="width: 300px;height: 25px;color: #fff;text-align: center; padding-bottom: 2em;">
            @TempData["Success"]
        </p>
    }
    <script>
        setTimeout(function () {
            $('#successMessage').fadeOut('slow');
        }, 5000);
    </script>
    <div class="dvUserDetails">
        @{

            Html.RenderPartial("_Index1", Model);
        }

    </div>
</div>
<div class="modal fade" id="myModal">
    <div id="dvCreatedetails">


    </div>

</div>
<div class="modal fade" id="myCancelModal">
    <div id="Canceldiv">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Confirm Cancel</h4>
                </div>
                <div class="modal-body">
                    <p>you sure you need to close without save!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button type="button" id="cancelyesbtn" class="btn btn-success popup-savebtn" data-dismiss="modal">yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script type="text/javascript">
        function searchData() {
            debugger
            var obj = {};

            obj.FirstName = $('#FirstName').val();
            obj.IsActive = true;
            $.ajax({
                url: '/Admin/Staff/_Index1',
                type: 'POST',
