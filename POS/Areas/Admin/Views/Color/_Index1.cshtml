@model List<Model.ColorModel>
<div class="prtm-full-block pos-relative">
    <div class="prtm-block-title pad-all-md">
        <div class="pos-relative">
            <div class="caption">
                <h3 class="text-capitalize">All Colors</h3>
            </div>
        </div>
    </div>
    <div class="prtm-block-content mrgn-b-md">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Color Code</th>
                    <th>Color Long</th>
                    <th>Color Short</th>
                    @*<th>Is Active</th>*@
                    <th style="min-width:125px;">Action</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="tbodyIndex">
                @if (Model.Count <= 0)
                {
                    <tr>
                        <td>
                            @Html.Label("No results Found")
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ColorLong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ColorShort)
                            </td>

                            <td style="min-width:85px;">
                                <i class="fa fa-pencil edit-form edit" data-backdrop="static" data-toggle="modal" data-target="#myModal" onclick="editColor(@item.Id)">
                                </i>&nbsp;
                                <i class="fa fa-trash delete delete-form" data-toggle="modal" data-target="#myModal" data-backdrop="static" onclick="deleteColor(@item.Id)"></i>
                                &nbsp;
                                <i class="fa fa-eye view-form details" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="colorDetails(@item.Id)"></i>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div class="col-md-12">
    @if (ViewBag.endPage > 1)
    {
        <div class="pagination">

            @if (ViewBag.CurrentPage > 1)
            {
                <li>
                    <a href="/Admin/Color/_Index1?page=1">First</a>
                </li>
                <li>
                    <a href="/Admin/Color/_Index1?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }
            @foreach (var i in ViewBag.result)
            {

                var page = i;

                <li class="@(page == ViewBag.CurrentPage ? "active" : "")">
                    <a href="/Admin/Color/_Index1?page=@page">@page</a>
                </li>

            }
            @if (ViewBag.CurrentPage < ViewBag.pageCount)
            {
                <li>
                    <a href="/Admin/Color/_Index1?page=@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
                <li>
                    <a href="/Admin/Color/_Index1?page=@(ViewBag.pageCount)">Last</a>
                </li>
            }

        </div>
    }
</div>
