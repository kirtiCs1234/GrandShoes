@model Model.ColorModel

@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edit Colors</h4>
        </div>
        @using (Html.BeginForm("UpdateColor", "Color", FormMethod.Post, new { id = "editForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            @*@Html.HiddenFor(model => model.RoleId)
                @Html.HiddenFor(model => model.CompanyId)
            @Html.HiddenFor(model => model.PasswordHash)
            @Html.HiddenFor(model => model.PasswordSalt)
            @Html.HiddenFor(model => model.IsActive)
            @Html.HiddenFor(model => model.IsVerified)*@

            <div class="modal-body">

                <div class="row  mrgn-b-lg">
                    <div class="col-md-6 col-xs-12 col-sm-6">
                        <label>Color Code</label>
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Color Code" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-md-6 col-xs-12 col-sm-6">
                        <label>Color Long</label>
                        @Html.EditorFor(model => model.ColorLong, new { htmlAttributes = new { @class = "form-control", placeholder = "Color Long" } })
                        @Html.ValidationMessageFor(model => model.ColorLong, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row  mrgn-b-lg">
                    <div class="col-md-6 col-xs-12 col-sm-6">
                        <label>Color Short</label>
                        @Html.EditorFor(model => model.ColorShort, new { htmlAttributes = new { @class = "form-control", placeholder = "Color Short" } })
                        @Html.ValidationMessageFor(model => model.ColorShort, "", new { @class = "text-danger" })
                    </div>
                  
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-backdrop="static" data-toggle="modal" data-target="#myCancelModal" id="btncancel" data-dismiss="modal" class="btn btn-outline-inverse cancel">Cancel</button>
                <input type="submit" value="Update" class="btn btn-success popup-savebtn" />
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $.validator.unobtrusive.parse($("#editForm"));
</script>
