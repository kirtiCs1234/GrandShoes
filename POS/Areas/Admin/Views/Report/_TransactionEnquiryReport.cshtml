

@model List<Model.Report.TransactionEnquiryModel>

<div class="prtm-full-block pos-relative">
    <div class="prtm-block-title pad-all-md">
        <div class="pos-relative">
            <div class="caption">
                <h3 class="text-capitalize">Transaction Enquiry Report</h3>
            </div>
            @*<button type="button" onclick="getFilterData()">Search</button>*@
        </div>
    </div>
    <div class="prtm-block-content mrgn-b-md">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Branch</th>
                        <th>ProductSKU</th>
                        <th>StyleSKU</th>
                        <th>Color</th>
                        <th>Date</th>
                        <th>Size</th>
                        <th>Desc</th>
                        <th>Order Number</th>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Cost</th>
                    </tr>
                </thead>
                <tbody class="tbodyIndex">
                    @if (Model.Count != 0)
                    {
                        string clas = "";
                        foreach (var item in Model)
                        {
                             clas = "";
                            if(item.Cost > item.Price)
                            {
                                clas = "red-highlight";
                            }
                    <tr class="@clas">
                        <td>
                            @Html.DisplayFor(modelItem => item.Branch)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductSKU)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StyleSKU)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Size)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cost)
                        </td>




                        @*<td style="min-width:85px;">

            <i class="fa fa-pencil edit-form edit" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="edit(@item.Id)"></i>
            &nbsp;
            <i class="fa fa-trash delete delete-form" data-toggle="modal" data-target="#myModal" data-backdrop="static" onclick="del(@item.Id)"></i>
            &nbsp;
            <i class="fa fa-eye view-form details" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="details(@item.Id)"></i>

        </td>*@
                    </tr>

                        }
                       
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">
                                <p>No record found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>






