@model Model.ProductSourceModel
@{

    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">View Product Source</h4>
        </div>
        @using (Html.BeginForm("Details", "ProductSource", FormMethod.Post, new { id = "viewForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="modal-body">
                <div class="row  mrgn-b-lg">
                    <div class="col-md-6 col-12 col-sm-12">
                        <label>Product Source</label>
                        @*<input class="form-control" type="text" placeholder="First Name" name="FirstName" />*@
                        @Html.EditorFor(model => model.Source, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Source, "", new { @class = "text-danger" })

                    </div>
                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-outline-inverse">Close</button>
            </div>

        }

    </div>
</div>
<script>

    $("#viewForm").find("input").attr("disabled", true);
    $("#viewForm").find("select").attr("disabled", true);
    $("#viewForm").find("textArea").attr("disabled", true);
    $("#viewForm").find(".popup-savebtn").hide();

</script>

