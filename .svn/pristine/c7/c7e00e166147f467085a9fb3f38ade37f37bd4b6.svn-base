@model List<Model.SupplierModel>
<div class="prtm-full-block pos-relative">
    <div class="prtm-block-title pad-all-md">
        <div class="pos-relative">
            <div class="caption">
                <h3 class="text-capitalize">Supplier</h3>
            </div>
        </div>
    </div>
    <div class="prtm-block-content mrgn-b-md">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Supplier Code</th>
                        <th>Supplier Name</th>
                        <th>Permanent Address1</th>
                        <th>Permanent Address2</th>
                        <th>Permanent Address3</th>
                        <th>Permanent City</th>
                        <th>Permanent Country</th>
                        <th>Permanent PostalCode</th>
                        <th>Correspondance Address1</th>
                        <th>Correspondance Address2</th>
                        <th>Correspondance Address3</th>
                        <th>Correspondance City</th>
                        <th>Correspondance Country</th>
                        <th>Correspondance PostalCode</th>
                        <th>Limit</th>
                        <th>Contact Number</th>
                        <th>Fax Number</th>
                        <th>Registration Date</th>
                        <th style="min-width:125px;">Action</th>

                    </tr>
                </thead>
                <tbody class="tbodyIndex">
                    @if (Model.Count != 0) { 
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PermanentAddress1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PermanentAddress2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PermanentAddress3)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PermanentCity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PermanentCountry)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PermanentPostalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CorrespondanceAddress1)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CorrespondanceAddress2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CorrespondanceAddress3)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CorrespondanceCity)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CorrespondanceCountry)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CorrespondancePostalCode)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Limit)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FaxNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistrationDate)
                            </td>
                            <td style="min-width:85px;">

                                <i class="fa fa-pencil edit-form edit" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="edit(@item.Id)"></i>
                                &nbsp;
                                <i class="fa fa-trash delete delete-form" data-toggle="modal" data-target="#myModal" data-backdrop="static" onclick="del(@item.Id)"></i>
                                &nbsp;
                                <i class="fa fa-eye view-form details" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="details(@item.Id)"></i>

                            </td>
                        </tr>
                        }
                    }
                    
                    else
                    {
                    <tr>
                        <td colspan="7">
                            <p>No results found.</p>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-12">
@if (ViewBag.endPage > 1)
{
    <div class="pagination">

        @if (ViewBag.CurrentPage > 1)
        {
            <li>
                <a href="/Admin/Supplier/_Index1?page=1">First</a>
            </li>
                <li>
                    <a href="/Admin/Supplier/_Index1?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
        }
        @foreach (var i in ViewBag.result)
        {

            var page = i;

            <li class="@(page == ViewBag.CurrentPage ? "active" : "")">
                <a href="/Admin/Supplier/_Index1?page=@page">@page</a>
            </li>

        }
        @if (ViewBag.CurrentPage < ViewBag.pageCount)
        {
            <li>
                <a href="/Admin/Supplier/_Index1?page=@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
                <li>
                    <a href="/Admin/Supplier/_Index1?page=@(ViewBag.pageCount)">Last</a>
                </li>
        }

    </div>
}
</div>