@section scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.date-picker').datepicker({ dateFormat: 'dd-mm-yy' }).val();
        })

        $("#purchaseorderForm").submit(function (e) {
            return false;
        });
    </script>

    <script type="text/javascript">
        function PurchaseOrderReportSearch() {
            debugger;      
            var purchareOrder = {};
            purchareOrder.FromDate = $('#fromDate').val();
            purchareOrder.ToDate = $('#toDate').val();
            purchareOrder.PurchaseOrderStatusId = $('#PurchaseOrderStatusId').val();     
            $.ajax({
                url: "/admin/PurchaseOrderReport/_Index1",
                type: 'POST',
                data: { purchaseOrder: purchareOrder },
                success: function (result) {
                    debugger;
                  
                    $('.dvPurchaseOrderReport').html(result);
                },
                error: function (xhr, status) {
                    alert(status)
                }
            });
            return false;
        }
        $(document).on("click", "a[href^='/Admin/PurchaseOrderReport/_Index1?page']", function () {
            $.ajax({
                type: "POST",
                url: $(this).attr("href"),
                // data: JSON.stringify(obj),
               
                success: function (result) {
                    $('.dvPurchaseOrderReport').html(result);                  
                },
                error: function (xhr, status) {
                    alert(status)
                }
            });
            return false;
        });
    </script>

}
