@model Model.PurchaseOrderModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">


<div class="row">
    <div class="prtm-page-bar col-md-5 col-lg-3 col-sm-12 col-12" style="background:none;">
        <ul class="breadcrumb" style="background:none;">
            <li class="breadcrumb-item text-capitalize">
                <h3>Purchase Order Report</h3>
            </li>
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        </ul>
    </div>
    @*@using (Html.BeginForm("Index", "User") new { @class = "formuser" })*@
    @*@using (Html.BeginForm("Index", "User", FormMethod.Post, new { @class = "formuser" }))
        {*@
    <!--------advanced search-->
    <div class="col-md-8 col-lg-6 col-sm-8 col-12 search-container">
        <div class="top-search-navbar-search smallsearch col-md-12 col-lg-12 col-sm-12 col-12">
            <div class="row">

                <input class="top-search-navbar-input col-md-8 col-lg-10 col-sm-8 col-xs-8 searchiFirstName" type="text" placeholder="Search Order No" Id="OrderNumber" name="iFirstName">

                @*<input type="submit" value="Add" class="btn btn-success popup-savebtn" />*@

                <button class="advance-search col-md-2 col-lg-1 col-sm-2 col-xs-2" type="button">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                </button>

                <button class="top-search-navbar-button col-md-2 col-lg-1 col-sm-2 col-xs-2" onclick="searchData()">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
        </div>
        <div class="advance-search-container col-md-12 col-lg-12 col-sm-12 col-12">
            <div class="advance-content">
                <div class="col-md-12 col-lg-12 col-xg-12"><h5 style="margin-bottom:20px;color:#000;font-weight:normal">Advanced Keyword Search</h5></div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Order Number</label>
                    <input class="form-control searchCode" type="text" placeholder="Order Number" name="OrderNumber" id="OrderNumber" />
                </div>
               
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>From Date</label>
                    <input class="form-control date-picker" type="text" placeholder="From Date" name="From Date" id="FromDate" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>To Date</label>
                    <input class="form-control date-picker1" type="text" placeholder="To Date" name="To Date" id="ToDate" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Order Status</label>
                    @Html.DropDownListFor(m => m.PurchaseOrderStatusId, null, "--Purchase Order Status--", htmlAttributes: new { @class = "form-control" })


                </div>

                <div class="col-md-12 col-lg-12 col-xg-12">
                    <button type="button" onclick="searchData()" class="btn btn-success advance-search-btn">Search</button>
                </div>
            </div>
        </div>


    </div>
   
    <!------------------>
    @*}*@
    @*<div class="add-btn-div col-md-4 col-lg-3 col-sm-4 col-12 text-right">
        <button type="button" class="btn btn-primary import-btn">Import</button>&nbsp;&nbsp;
        <button type="button" class="btn btn-primary export-btn">Export</button>&nbsp;&nbsp;
        
    </div>*@
</div>
<div class="dvUserDetails">
    @{

        Html.RenderPartial("_Index1", Model);
    }

</div>

@section scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.date-picker').datepicker({ dateFormat: 'mm/dd/yy' }).val();
        })
        $(function () {
            $('.date-picker1').datepicker({ dateFormat: 'mm/dd/yy' }).val();
        })
       
    </script> 

    <script type="text/javascript">
        function searchData() {
            debugger;
            var obj = {};
            obj.OrderNumber = $('#OrderNumber').val();
           
            obj.FromDate = $('#FromDate').val();
            obj.ToDateS = $('#ToDate').val();
            obj.PurchaseOrderStatusId = $('#PurchaseOrderStatusId').val();
            obj.IsActive = true;
            $.ajax({
                url: '/Admin/PurchaseOrderReport/_Index1',
                type: 'POST',
                data: obj,
                success: function (result) {
                    $('.dvUserDetails').html(result);
                },
                error: function (xhr, status) {
                    alert(status)
                }

            });
            return false;
        }
        $(document).on("click", "a[href^='/Admin/PurchaseOrderReport/_Index1?page']", function () {
            var obj = {};
            obj.OrderNumber = $('#OrderNumber').val();

            obj.FromDate = $('#FromDate').val();
            obj.ToDateS = $('#ToDate').val();
            obj.PurchaseOrderStatusId = $('#PurchaseOrderStatusId').val();
            obj.IsActive = true;
            $.ajax({
                type: "POST",
                url: $(this).attr("href"),
                // data: JSON.stringify(obj),
                data: obj,
                success: function (result) {
                    $('.dvUserDetails').html(result);
                    //  alert('hdfjdhfj');
                },
                error: function (xhr, status) {
                    alert(status)
                }

            });
            return false;
        });
       
    </script>

}
