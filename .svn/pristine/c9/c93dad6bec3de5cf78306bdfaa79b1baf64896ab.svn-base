@model List<Model.ColorModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="prtm-page-bar col-md-5 col-lg-3 col-sm-12 col-12" style="background:none;">
        <ul class="breadcrumb" style="background:none;">
            <li class="breadcrumb-item text-capitalize">
                <h3>Color</h3>
            </li>
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        </ul>
    </div>

    <div class="col-md-8 col-lg-6 col-sm-8 col-12 search-container">

        <div class="top-search-navbar-search smallsearch col-md-12 col-lg-12 col-sm-12 col-12">
            <div class="row">
                <input class="top-search-navbar-input col-md-8 col-lg-10 col-sm-8 col-xs-8 searchiCode" type="text" placeholder="Enter Color Code" name="Code" id="Code" />
                <button class="advance-search col-md-2 col-lg-1 col-sm-2 col-xs-2" type="button">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                </button>
                <button type="submit" onclick="searchData()" class="top-search-navbar-button col-md-2 col-lg-1 col-sm-2 col-xs-2">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
        </div>
        <div class="advance-search-container col-md-12 col-lg-12 col-sm-12 col-12">
            <div class="advance-content">
                <div class="col-md-12 col-lg-12 col-xg-12"><h5 style="margin-bottom:20px;color:#000;font-weight:normal">Advanced Keyword Search</h5></div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Code</label>
                    <input class="form-control searchCode" id="iCode" type="text" placeholder="Enter Color Code" name="Code" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Color Long</label>
                    <input class="form-control searchLongCode" id="ColorLong" type="text" placeholder="Color Long" name="ColorLong" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Color Short</label>
                    <input class="form-control searchShortCode" id="ColorShort" type="text" placeholder="Color Short" name="ColorShort" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <button type="submit" onclick="searchData()" class="btn btn-success advance-search-btn">Search</button>
                </div>
            </div>
        </div>

    </div>

    <!------------------>

    <div class="add-btn-div col-md-4 col-lg-3 col-sm-4 col-12 text-right">
        <button type="button" class="btn btn-primary import-btn" onclick="Import()" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false">Import</button>&nbsp;&nbsp;
        <a href="@Url.Action("ExportList")">
            <button type="button" class="btn btn-primary export-btn">Export</button>&nbsp;&nbsp;
        </a>
        <button type="button" onclick="create()" class="btn btn-primary add-btn add-form create" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false">Add</button>
    </div>
</div>
<div class="table-style">
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage" style="width: 300px;height: 25px;color: #fff;text-align: center; padding-bottom: 2em;">
            @TempData["Success"]
        </p>
    }
    <script>
        setTimeout(function () {
            $('#successMessage').fadeOut('slow');
        }, 5000);
    </script>

    <div class="dvUserDetails">
        @{

            Html.RenderPartial("_Index1", Model);
        }

    </div>
</div>

<div class="modal fade" id="myCancelModal">
    <div id="Canceldiv">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Confirm Cancel</h4>
                </div>
                <div class="modal-body">
                    <p>you sure you need to close without save!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button type="button" id="cancelyesbtn" class="btn btn-default" data-dismiss="modal">yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal">
    <div id="dvCreatedetails">
    </div>
    <div class="row" id="dvCreatedetails001" style="margin:0px;">
    </div>
</div>
