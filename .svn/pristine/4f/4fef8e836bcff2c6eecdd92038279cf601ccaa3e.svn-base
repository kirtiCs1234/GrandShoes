@model List<Model.ColorModel>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Search Results</h4>
        </div>
        <div class="table-style">           
                <div class="prtm-block-content mrgn-b-md">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Color Code</th>
                                    <th>Color Long</th>
                                    <th>Color Long</th>
                                    @*<th style="min-width:125px;">Action</th>*@
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="tbodyIndex">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ColorLong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ColorShort)
                                        </td>
                                        @*<td style="min-width:85px;">
                                                <i class="fa fa-pencil edit-form edit" data-backdrop="static" data-toggle="modal" data-target="#myModal" onclick="editColor(@item.Id)">
                                                </i>&nbsp;
                                                <i class="fa fa-trash delete delete-form" data-toggle="modal" data-target="#myModal" data-backdrop="static" onclick="deleteColor(@item.Id)"></i>
                                                &nbsp;
                                                <i class="fa fa-eye view-form details" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="colorDetails(@item.Id)"></i>
                                            </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        
        <div class="modal-footer">
            <button type="button" data-backdrop="static" data-dismiss="modal" data-toggle="modal" data-target="#myCancelModal" id="btncancel" class="btn btn-outline-inverse cancel">Cancel</button>
        </div>
    </div>
 </div>

