@model List<Model.LogModel>

<div class="prtm-full-block pos-relative">
    <div class="prtm-block-title pad-all-md">
        <div class="pos-relative">
            <div class="caption">
                <h3 class="text-capitalize">Log</h3>
            </div>
        </div>
    </div>
    <div class="prtm-block-content mrgn-b-md">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Action Name</th>
                        <th>Date</th>
                        <th>Page</th>
                        <th>Page Url</th>
                        <th style="min-width:125px;">Action</th>
                    </tr>
                </thead>
                <tbody class="tbodyIndex">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActionLog.ActionLogType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LogDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Page.page1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Page.pageUrl)
                            </td>

                            <td style="min-width:85px;">


                                <a href="DetailsLog?id=@item.Id"><img id="user_img" src="~/Image/Log/download.png" height="50" width="50" /></a>
                            </td>
                            <td>
                                <a href="DownloadDetail?id=@item.Id"> <img id="user_img" src="~/Image/Log/download.jpg" height="50" width="50" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="col-md-12">
    @if (ViewBag.endPage > 1)
    {
        <div class="pagination">

            @if (ViewBag.CurrentPage > 1)
            {
                <li>
                    <a href="/Admin/Log/_Index1?page=1">First</a>
                </li>
                <li>
                    <a href="/Admin/Log/_Index1?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }
            @foreach (var i in ViewBag.result)
            {

                var page = i;

                <li class="@(page == ViewBag.CurrentPage ? "active" : "")">
                    <a href="/Admin/Log/_Index1?page=@page">@page</a>
                </li>

            }
            @if (ViewBag.CurrentPage < ViewBag.totalPages)
            {
                <li>
                    <a href="/Admin/Log/_Index1?page=@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
                <li>
                    <a href="/Admin/Log/_Index1?page=@(ViewBag.totalPages)">Last</a>
                </li>
            }

        </div>
    }
</div>
