@model Model.OffersModel

<div class="tbb-content col-md-9">
    <div class="row">
        @if (Model.ProductList.Count != 0)
        {
            foreach (var item in Model.ProductList)
            {


                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="tour_container">
                                <div class="ribbon_3 popular">
                                    <span>Offer</span>
                                </div>

                                <div class="img_container">
                                    <a href="#">
                                        @if(item.PrimaryImage!=null){
                                        <img src="~/Image/product/@item.PrimaryImage" alt="Image">
                                        }
                                        
                                        else
                                        {
                                        <img id="user_img1" src="/Image/product/no-Image.jpg" class="create-user-image1"  style="border:thin;" />
                                        }
                                        <div class="short_info">
                                            <i class="price"></i>@Html.DisplayFor(modelItem => item.Color.Code)<span class="price"><sup></sup>@Html.DisplayFor(modelItem => item.CostPrice)</span>
                                        </div>
                                    </a>
                                </div>

                                <div class="tour_title">

                                    <h3><a href="#"><strong>Product Code</strong>@Html.DisplayFor(modelItem => item.ProductSKU) </a></h3>
                                    @*<div class="wishlist">
                                        <a class="tooltip_flip tooltip-effect-1" href="#">+<span class="tooltip-content-flip"><span class="tooltip-back">@Html.DisplayFor(modelItem => item.Season.Description)</span></span></a>
                                    </div>*@
                                    <!-- End wish list-->
                                </div>
                            </div>
                            <!-- End box tour -->
                        </div>
                    </div>
                </div>

            }
        
        }else
        {
        <tr>
            <td colspan="7">
                <p>No record found</p>
            </td>
        </tr>
        }
    </div>
    <div class="col-md-12">

        @if (ViewBag.endPage > 1)
        {
            <div class="pagination">

                @if (ViewBag.CurrentPage > 1)
                {
                    <li>
                        <a href="/Admin/Offers/_Index?page=1">First</a>
                    </li>
                    <li>
                        <a href="/Admin/Offers/_Index?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>
                }
                @foreach (var i in ViewBag.result)
                {

                    var page = i;

                    <li class="@(page == ViewBag.CurrentPage ? "active" : "")">
                        <a href="/Admin/Offers/_Index?page=@page">@page</a>
                    </li>

                }
                @if (ViewBag.CurrentPage < ViewBag.pageCount)
                {
                    <li>
                        <a href="/Admin/Offers/_Index?page=@(ViewBag.CurrentPage + 1)">Next</a>
                    </li>
                    <li>
                        <a href="/Admin/Offers/_Index?page=@(ViewBag.pageCount)">Last</a>
                    </li>
                }

            </div>
        }

    </div>

</div>
