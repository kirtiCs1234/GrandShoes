@model Model.BranchModel
@{
    Layout = null;

}
<div class="table-style">
    <div class="prtm-full-block pos-relative">
        <div class="prtm-block-title pad-all-md ">
            <div class="pos-relative">
                <div class="caption">
                    <h3 class="text-capitalize">Destination Branch</h3>
                </div>
            </div>
        </div>

        @using (Html.BeginForm("SMIBranchDefault", "SMIBranchDefault", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="prtm-block-content mrgn-b-md ">
                <div class="table-responsive ">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Branch code </th>
                                <th>Branch Name</th>
                                <th>Distance</th>
                                <th>Preferred Route</th>
                            </tr>
                        </thead>
                        <tbody class="tbodyIndex">
                           @for (int i = 0; i < Model.BranchDestination.Count;i++)
                            {
                               <tr>
                                    <td>
                                        @if (Model.BranchDestination[i].Id == 0)
                                        {
                                            @Html.CheckBox("IsCheck", false)
                                        }
                                        else
                                        {
                                            @Html.CheckBox("IsCheck", true)
                                        }
                                    </td>
                                    <td>
                                        @Html.HiddenFor(x => x.BranchDestination[i].Branch1.BranchCode)
                                       @*<span> @Model.BranchDestination[i].Branch1.BranchCode</span>*@ 
                                        @Html.HiddenFor(x => x.BranchDestination[i].Branch1.Name)
                                       @*<span> &nbsp;&nbsp; </span>*@
                                        @*<span> @Model.BranchDestination[i].Branch1.Name</span>*@
                                       @Html.TextBoxFor(modelItem => Model.BranchDestination[i].Branch1.BranchCode ,new { @readonly = "readonly" })
                                    </td>

                                    <td>

                                        @Html.TextBoxFor(modelItem => Model.BranchDestination[i].Branch1.Name, new { @readonly = "readonly" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(modelItem => Model.BranchDestination[i].Distance)
                                    </td>
                                    @*<td>
                                        @Html.TextBoxFor(modelItem => item.IsPreferredRoute)
                                    </td>*@
                                    @if (Model.BranchDestination[i].IsPreferredRoute == true)
                                    {
                                    <td>
                                        @Html.DropDownListFor(modelItem => Model.BranchDestination[i].IsPreferredRoute, new[] { new SelectListItem { Text = "True", Value = "1" }, new SelectListItem { Text = "False", Value = "0" } })   
                                    </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.DropDownListFor(modelItem => Model.BranchDestination[i].IsPreferredRoute, new[] { new SelectListItem { Text = "False", Value = "0" }, new SelectListItem { Text = "True", Value = "1" } })
                                        </td>
                                    }
                                     <td>
                                        @Html.HiddenFor(modelItem => Model.BranchDestination[i].FromBranchId)
                                    </td>
                                    <td>
                                        @Html.HiddenFor(modelItem => Model.BranchDestination[i].ToBranchId)
                                    </td>
                                    <td>
                                        @Html.HiddenFor(modelItem => Model.BranchDestination[i].Id)
                                    </td>
                                  
                                </tr>
                            }
                          
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="modal-footer">
                <input type="submit" value="Save" class="btn btn-success popup-savebtn" />
            </div>
        }
        </div>
    </div>

