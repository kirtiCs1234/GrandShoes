@model Model.DiscountAddModel
@{
    Layout = null;
}
<div class="table-style">
    <div class="prtm-full-block pos-relative col-md-10">

        @using (Html.BeginForm("Create", "Discount", FormMethod.Post, new { id = "createForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           

            <div class="prtm-block-content mrgn-b-md col-md-12 padding-section">
                <div class="">
                  
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">
                            <label>Product SKU</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">

                            @Html.EditorFor(model => model.Discounts.ProductSKU, new { htmlAttributes = new { @class = "form-control", placeholder = "Product SKU",@Value=@ViewBag.ProductSKU } })
                            @Html.ValidationMessageFor(model => model.AutocompleteProductSKU, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">
                            <label>Style SKU</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">

                            @Html.EditorFor(model => model.Discounts.StyleSKU, new { htmlAttributes = new { @class = "form-control", placeholder = "Style SKU", @Value = @ViewBag.StyleSKU } })
                            @Html.ValidationMessageFor(model => model.AutocompleteProductStyleSKU, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">
                            <label><input type="checkbox" class="check" id="flate"/>Flat Discount</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">
                            <label><input type="checkbox" class="check" id="quantity"/>Quantity Discount</label>
                        </div>
                    </div>
                   
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">
                            <label>Minimum Quantity</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">

                            @Html.EditorFor(model => model.Discounts.MinimumQuantity, new { htmlAttributes = new { @class = "form-control", @id = "MinimumQuantity", placeholder = "Minimum Quantity" } })
                            @Html.ValidationMessageFor(model => model.Discounts.MinimumQuantity, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">

                            <label>Date From</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">

                            @Html.EditorFor(model => model.Discounts.DateFrom, new { htmlAttributes = new { @class = "form-control", @id = "DateFrom", placeholder = "Date From" } })
                            @Html.ValidationMessageFor(model => model.Discounts.DateFrom, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">

                            <label>Date To</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">

                            @Html.EditorFor(model => model.Discounts.DateTo, new { htmlAttributes = new { @class = "form-control", @id = "DateTo", placeholder = "Date To" } })
                            @Html.ValidationMessageFor(model => model.Discounts.DateTo, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">

                            <label>Percent Discount</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">

                            @Html.EditorFor(model => model.Discounts.PercentDiscount, new { htmlAttributes = new { @class = "form-control", @id = "PercentDiscount", placeholder = "Percent Discount" } })
                            @Html.ValidationMessageFor(model => model.Discounts.PercentDiscount, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">

                            <label>Text</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">

                            @Html.EditorFor(model => model.Discounts.Text, new { htmlAttributes = new { @class = "form-control", @id = "Text", placeholder = "Text" } })
                            @Html.ValidationMessageFor(model => model.Discounts.Text, "", new { @class = "text-danger" })

                        </div>
                    </div>
                   
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-12 col-xs-12 col-sm-12">

                            <label><input type="checkbox" />Exclude Area man MarkDown</label>
                        </div>

                    </div>
                    <div class="row  mrgn-b-lg">
                        <div class="col-md-8 col-xs-12 col-sm-6">

                            <label>Label Template File</label>
                        </div>
                        <div class="col-md-4 col-xs-12 col-sm-6">

                            @Html.EditorFor(model => model.Discounts.Text, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.Discounts.Text, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-2 padding-section">
        <input type="button" value="Accept" id="SubmitButton" class="btn btn-success popup-savebtn form-control branch-btn-input" onclick="Submit()" />
        <button type="button" class="btn btn-outline-inverse cancel form-control mrgn-b-md branch-btn">History</button>
        <button type="button" class="btn btn-outline-inverse cancel form-control">Clear</button>
    </div>
</div>

<script>
    window.onload = function () {
        $.validator.unobtrusive.parse($("#createForm"))
    }   
</script>