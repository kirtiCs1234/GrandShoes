@model Model.BranchStockReportModel
@{
    ViewBag.Title = "_Index1";
    Layout = null;
}
<div class="row">
    <div class="col-sm-12 col-md-12 col-xs-12">
        <div class="forms">
            <div class="row">
                <div class="prtm-block-content mrgn-b-md">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>

                                    <th>Branch Code</th>
                                    <th>Branch Name</th>
                                    <th>Branch Size</th>
                                    <th>Address1 </th>
                                    <th>Address2</th>
                                    <th>Address3</th>
                                    <th>Contact Number</th>
                                    <th>Area Code</th>
                                    <th>Postal Code</th>

                                    @*<th>Packing Date</th>*@
                                    @*<th>Stock Distribution Summary Number </th>*@
                                </tr>
                            </thead>
                            <tbody class="tbodyIndex" id="table">
                                @foreach (var item in Model.BranchList)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BranchCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StoreSize)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddressLine1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddressLine2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddressLine3)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telephone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AreaCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PostalCode)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="col-md-12">
    @if (ViewBag.endPage > 1)
    {
        <div class="pagination">

            @if (ViewBag.CurrentPage > 1)
            {
                <li>
                    <a href="/Admin/BranchStockReport/_Index1?page=1">First</a>
                </li>
                <li>
                    <a href="/Admin/BranchStockReport/_Index1?page=@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }
            @foreach (var i in ViewBag.result)
            {
                var page = i;
                <li class="@(page == ViewBag.CurrentPage ? "active" : "")">
                    <a href="/Admin/BranchStockReport/_Index1?page=@page">@page</a>
                </li>
            }
            @if (ViewBag.CurrentPage < ViewBag.pageCount)
            {
                <li>
                    <a href="/Admin/BranchStockReport/_Index1?page=@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
                <li>
                    <a href="/Admin/BranchStockReport/_Index1?page=@(ViewBag.pageCount)">Last</a>
                </li>
            }
        </div>
    }
</div>