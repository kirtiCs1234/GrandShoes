}*@
	</div>
    <div class="dvUserDetails">
        @{
            Html.RenderPartial("_Index1", Model);
        }
    </div>
</div>
<div class="modal fade" id="myCancelModal">
    <div id="Canceldiv">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Confirm Cancel</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you need to close without save!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button type="button" id="cancelyesbtn" class="btn btn-success popup-savebtn" data-dismiss="modal">yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal">
    <div id="dvCreatedetails">
    </div>
    <div class="row" id="dvCreatedetails001" style="margin:0px;">
    </div>
</div>
<div>
    <table>
        <thead>
            <tr>
                <td>Sr No.</td>
                <td>Message</td>
            </tr>
        </thead>
        <tbody>
            @if (data != null)
            {
                foreach (var item in data)
                {
                    <tr>
                        <td>@item.i</td>
                        <td>@item.MessageData</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@section scripts{

    <script type="text/javascript">

        function searchData() {
            debugger;
            var obj = {};

            obj.Code = $('#Code').val();
            obj.iCode = $('#iCode').val();
            obj.ColorLong = $('#ColorLong').val();

            obj.ColorShort = $('#ColorShort').val();
            obj.IsActive = true;
            $.ajax({
                url: '/Admin/Color/_Index1',
                type: 'POST',
                data: obj,
                success: function (result) {
                    $('.dvUserDetails').html(result);
                },
                error: function (xhr, status) {
                    alert(status)
                }

            });
            return false;
        }
        $(document).on("click", "#cancelyesbtn", function () {
            window.location = '/Admin/Color/Index';
        })
        $(document).on("click", "a[href^='/Admin/Color/_Index1?page']", function () {
            debugger

            var obj = {};
            obj.Code = $('#Code').val();
            obj.ColorLong = $('#ColorLong').val();

            obj.ColorShort = $('#ColorShort').val();
            obj.IsActive = true;
            $.ajax({
                type: "POST",
                url: $(this).attr("href"),

                data: obj,
                success: function (result) {
                    $('.dvUserDetails').html(result);
                    //  alert('hdfjdhfj');
                },
                error: function (xhr, status) {
                    alert(status)
                }

            });
            return false;
        });
        var ColorId;
        var Status;
        var ColorSearch = { Code: "", ColorLong: "", ColorShort: "" };
        function create() {
            Data(0);
        }
        function editColor(id) {
            ColorId = id;//$(this).data("id");
            Data(1);
        }
        function colorDetails(id) {
            ColorId = id;//$(this).data("id");
            Data(2);
        }
        function deleteColor(id) {
            debugger;
            ColorId = id;//"";
            Data(3);
        }
        function Import() {
            Data(4);
        }
        function Export() {
            Data(5);
        }
        function Data(ch) {
            var crud = "";
            switch (ch) {
                case 0:
                    crud = '/Admin/Color/Create';
                    break;
                case 1:
                    debugger;
                    crud = '/Admin/Color/Edit/' + ColorId;
                    break;
                case 2:
                    debugger;
                    crud = '/Admin/Color/Details/' + ColorId;
                    break;
                case 3:
                    debugger;
                    crud = '/Admin/Color/Delete/' + ColorId;
                    break;
                case 4:
                    debugger;
                    crud = '/Admin/Color/ExcelUpload/';
                    break;
                case 5:
                    crud = '/Admin/Color/ExportList'
                    break;

            }

            debugger;
            $.ajax({
                url: crud,
                contentType: 'application/json; charse=utf-8',
                type: 'get',
                //data: Color,
                success: function (result) {
                    $('#dvCreatedetails').html(result);
                },
                error: function (xhr, status) {
                    alert(status)
                }
            });
        }
        $(document).ready(function () {
        	$('#btnUpload').click(function () {
        		debugger;
        		// Checking whether FormData is available in browser  
        		if (window.FormData !== undefined) {

        			var fileUpload = $("#file").get(0);
        			var files = fileUpload.files;
        			var formData = new FormData();
        			formData.append("file", files[0]);
        			$.ajax({
        				url: '/Admin/Color/ExcelUpload1',
        				type: "POST",
        				contentType: false, // Not to set any content header  
        				processData: false, // Not to process data  
        				data: formData,
        				success: function (result) {
        					debugger;
        					if (result != "") {
        						$('#FileBrowse').find("*").prop("disabled", true);
        						LoadProgressBar(result); //calling LoadProgressBar function to load the progress bar.  
        					}
        				},
        				error: function (err) {
        					alert(err.statusText);
        				}
        			});
        		} else {
        			alert("FormData is not supported.");
        		}
        	});
        });
        
        function LoadProgressBar(result) {
        	var progressbar = $("#progressbar-5");
        	var progressLabel = $(".progress-label");
        	progressbar.show();
        	$("#progressbar-5").progressbar({
        		//value: false,  
        		change: function () {
        			progressLabel.text(
                     progressbar.progressbar("value") + "%");  // Showing the progress increment value in progress bar  
        		},
        		complete: function () {
        			progressLabel.text("Loading Completed!");
        			progressbar.progressbar("value", 0);  //Reinitialize the progress bar value 0  
        			progressLabel.text("");
        			progressbar.hide(); //Hiding the progress bar  
        			$('#FileBrowse').find("*").prop("disabled", false);
        		}
        	});
        	function progress() {
        		var val = progressbar.progressbar("value") || 0;
        		progressbar.progressbar("value", val + 1);
        		if (val < 99) {
        			setTimeout(progress, 25);
        		}
        	}
        	setTimeout(progress, 100);
        }

       

    </script>
}