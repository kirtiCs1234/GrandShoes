@model List<Model.UserModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="prtm-page-bar col-md-5 col-lg-3 col-sm-12 col-12" style="background:none;">
        <ul class="breadcrumb" style="background:none;">
            <li class="breadcrumb-item text-capitalize">
                <h3>Account</h3>
            </li>
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        </ul>
    </div>
    @*@using (Html.BeginForm("Index", "User") new { @class = "formuser" })*@
    @*@using (Html.BeginForm("Index", "User", FormMethod.Post, new { @class = "formuser" }))
        {*@
    <!--------advanced search-->
    <div class="col-md-8 col-lg-6 col-sm-8 col-12 search-container">
        <div class="top-search-navbar-search smallsearch col-md-12 col-lg-12 col-sm-12 col-12">
            <div class="row">

                <input class="top-search-navbar-input col-md-8 col-lg-10 col-sm-8 col-xs-8 searchiFirstName" type="text" placeholder="Search Accounts" name="iFirstName">

                @*<input type="submit" value="Add" class="btn btn-success popup-savebtn" />*@

                <button class="advance-search col-md-2 col-lg-1 col-sm-2 col-xs-2" type="button">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                </button>

                <button class="top-search-navbar-button col-md-2 col-lg-1 col-sm-2 col-xs-2" onclick="searchData(true)">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
        </div>


        <div class="advance-search-container col-md-12 col-lg-12 col-sm-12 col-12">
            <div class="advance-content">
                <div class="col-md-12 col-lg-12 col-xg-12"><h5 style="margin-bottom:20px;color:#000;font-weight:normal">Advanced Keyword Search</h5></div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>First Name</label>
                    <input class="form-control searchFirstName" type="text" placeholder="First Name" name="FirstName" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Last Name</label>
                    <input class="form-control searchLastName" type="text" placeholder="Last Name" name="LastName" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Email</label>
                    <input class="form-control searchEmail" type="email" placeholder="Email" name="Email" />
                </div>
                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Phone</label>
                    <input class="form-control searchPhone" type="tel" placeholder="Phone" name="Phone" />
                </div>

                <div class="col-md-12 col-lg-12 col-xg-12">
                    <label>Status</label>
                    <select class="selectize-single-select searchIsActive" name="IsActive">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>

                <div class="col-md-12 col-lg-12 col-xg-12">
                    <button type="button" onclick="searchData(false)" class="btn btn-success advance-search-btn">Search</button>
                </div>
            </div>
        </div>
    </div>
    <!------------------>
    @*}*@
    <div class="add-btn-div col-md-4 col-lg-3 col-sm-4 col-12 text-right">
        <button type="button" class="btn btn-primary import-btn">Import</button>&nbsp;&nbsp;
        <button type="button" class="btn btn-primary export-btn">Export</button>&nbsp;&nbsp;

        <button type="button" class="btn btn-primary add-btn add-form create" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false" onclick="create()">Add</button>
    </div>
</div>
<div class="table-style">
    <div class="prtm-full-block pos-relative">
        <div class="prtm-block-title pad-all-md">
            <div class="pos-relative">
                <div class="caption">
                    <h3 class="text-capitalize">User</h3>
                </div>
            </div>
        </div>
        <div class="prtm-block-content mrgn-b-md">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Middle Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone</th>

                            <th>Approve/Disapprove</th>
                            <th>Reset Password</th>
                            <th style="min-width:125px;">Action</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="tbodyIndex">

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MiddleName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsVerified)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>

                            <td style="min-width:85px;">
                                <i class="fa fa-pencil edit-form edit" data-backdrop="static" data-toggle="modal" data-target="#myModal" onclick="edit(@item.Id)">
                                </i>&nbsp;

                                <i class="fa fa-trash delete delete-form" data-toggle="modal" data-target="#myModal" data-backdrop="static" onclick="del(@item.Id)"></i>
                                &nbsp;
                                <i class="fa fa-eye view-form details" data-toggle="modal" data-backdrop="static" data-target="#myModal" onclick="details(@item.Id)"></i>

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal">
    <div id="dvCreatedetails">
        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title add-heading">Add Account</h4>
            <h4 class="modal-title view-heading">View Account</h4>
            <h4 class="modal-title edit-heading">Edit Account</h4>
            <h4 class="modal-title delete-heading">Delete Account</h4>
            <h4 class="modal-title activate-heading">Activate Account</h4>*@

    </div>
    <div class="row" id="dvCreatedetails001" style="margin:0px;">

    </div>
</div>
<script>
    var id1;
    function create() {
        Data(0);
    }

    function edit(edit) {
        id1 = edit;//$(this).data("id");
        Data(1);
    }

    function details(details) {
        id1 = details;//$(this).data("id");
        Data(2);
    }

    function del(del) {
        id1 = del;//"";
        Data(3);
    }

  //  $(".approve").click(function () {
 //       id2 = $(this).data("id");
  //      approved();
  //  });
    function Data(ch) {
        var crud = "";
        switch (ch) {
            case 0:
                crud = '/Admin/User/Create';
                break;
            case 1:
                crud = '/Admin/User/Edit/' + id1;
                break;
            case 2:
                crud = '/Admin/User/Details/' + id1;
                break;
            case 3:
                crud = '/Admin/User/Delete/' + id1;
                break;
           // case 4:
            //    crud = '/Admin/User/approve/' + id1;
             //   break;
        }
        $.ajax({

            url: crud,
            contentType: 'application/html; charse=utf-8',
            type: 'GET',
            // data: {page : page} ,
            dataType: 'html',
            success: function (result) {

                $('#dvCreatedetails').html(result);
            },
            error: function (xhr, status) {
                alert(status)
            }
        });
    }

</script>
