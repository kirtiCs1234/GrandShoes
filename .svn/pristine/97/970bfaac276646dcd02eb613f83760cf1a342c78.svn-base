

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Model.UserLoginModel
<div id="wrapper">

    <div class="sign_up">
        <h3 class="heading_signup" style="margin-left:600px;">Forgot Password</h3>

        @using (Html.BeginForm("ForgetPassword", "MyAccount", new { id = "createForm" }))
        {

            <div class="form-group">
                <label class="col-xs-12 col-sm-4 text-right">Email</label>
                <div class="col-xs-12 col-sm-4">
                    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { autocomplete = "off", @class = "form-control", @placeholder = "Enter email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="margin-top:10px;">
                    <input style="margin-left:350px;" type="submit" class="btn btn-default" value="Login" />
                    <input type="button" onclick="onclick()" class="btn btn-default" value="Cancel" />
                </div>

            </div>

        }
    </div>
</div>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

<script type="text/javascript">

    $.validator.unobtrusive.parse($("#createForm"))
</script>



