                @if (Model.Count != 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)

                            </td>
                            <td>
                                <div>
                                    @*@Html.Raw(item.TemplateHtml)*@
                                    <button type="button" class="btn btn-primary add-btn add-form"
                                            data-backdrop="static" data-toggle="modal" id="#myModal"
                                            onclick="viewtemp(@item.Id)" data-target="#myModal">
                                        View
                                    </button>
                                </div>
                            </td>


                            <td style="min-width:85px;">
                                <a class="fa fa-pencil" href="Index?id=@item.Id"></a>
                                @*<i class="fa fa-pencil edit-form abc" data-toggle="modal" data-backdrop="static" data-target="#myModal" id="#myModal" data-id="@item.Id"><a href="Company/Template/Index?id=@item.Id"></a></i>*@ &nbsp;
                                <i class="fa fa-trash xyz1" data-toggle="modal" data-backdrop="static" data-target="#myModal2" id="#myModal2" data-id="@item.Id" onclick="del(@item.Id)"></i> &nbsp;
                                @*<i class="fa fa-eye xyz2" data-toggle="modal" data-backdrop="static" data-id="@item.Id" id="#myModal" data-target="#myModal"></i>*@
                            </td>
                            <td></td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">
                            <p>No Record Found.</p>
                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>
