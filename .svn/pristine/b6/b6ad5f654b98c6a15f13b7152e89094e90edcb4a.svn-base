    var list = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.model))
        function viewtemp(htmlid) {
            var str = "";
            var obj = {};
            debugger;
            for (var i = 0; i < list.length; i++) {
                if (list[i].Id == htmlid) {
                    str = list[i].TemplateHtml;
                    obj.TemplateHtml = str;
                    obj.Width = list[i].Width;
                    obj.Height = list[i].Height;
                    obj.LengthId = list[i].LengthId;
                    obj.IsActive = true;
                    break;
                }
            }
            $.ajax({
                type: "POST",
                dataType: "html",
                url: '/Admin/Template/ShowTemplate',
                data: obj,
                success: function (result) {
                    debugger;
                    //$('#barcode-temp').html(result);
                    $('#modaldiv1').html(result);

                },
                error: function (xhr, status) {
                    alert(status);
                }
            });


        }
